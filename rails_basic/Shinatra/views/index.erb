<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/style.css">
        <title>sinatra</title>
    </head>
    <body>
        <h1>これはerbで書きました</h1>
        <% if @message %>
            <div><%= @message %></div>
        <% end %>
       <h2>今の時間は<%= @now %></h2>
       <thead></thead>
       <tbody>
           <% @contacts.each do |contact| %>
               <tr>
                   <td>
                       <div><%= contact.id %></div>
                       <div><%= contact.name %></div>
                       <div><%= contact.email %></div>
                       <div><%= contact.gender %></div>
                   </td>
               </tr>
           <% end %>
       </tbody>
       <a href="about.html">このサービスについて</a>
       <a href="contact_new">コンタクトフォーム</a>
    </body>
</html>