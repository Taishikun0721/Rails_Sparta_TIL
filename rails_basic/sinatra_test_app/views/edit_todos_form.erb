<html>
    <head>
        <meta charset="utf-8">
        <title>edit_todos_form</title>
    </head>
    <body>
        <h1>タスクを更新する</h1>
        <%= @message %>
        <form action="/todos/<%= @todo.id %>" method="post">
            <input type="text" name="todo" value=<%= @todo.todo %>>
            <input type="hidden" name="_method" value="PUT">
            <input type="submit" value="更新">
        </form>
        <h3><a href="/">TOPに戻る</a></h3>
    </body>
</html>
